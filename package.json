{
  "name": "engine-3d",
  "version": "0.13.0",
  "description": "Simple 3D Game Engine",
  "main": "dist/engine.js",
  "module": "index.js",
  "jsnext:main": "index.js",
  "scripts": {
    "prepare": "npm run build",
    "pretest": "npm run build:dev",
    "build": "npm run build:dev && npm run build:min",
    "build:shader": "node ./script/build-shader.js",
    "build:effect": "node ./script/build-effect.js",
    "build:dev": "npm run build:shader && npm run build:effect && rollup -c ./script/rollup.config.js",
    "build:min": "uglifyjs ./dist/engine.dev.js --mangle --source-map url=engine.min.js.map -o ./dist/engine.min.js",
    "dev": "rollup -w -c ./script/rollup.config.js",
    "start": "electron ./playground",
    "server": "preview -p 8002 -e playground",
    "test": "tap test/*.spec.js",
    "test:ecs": "rollup -c ./test-ecs/rollup.ecs.js && tap ./test-ecs/*.spec.js",
    "test:sg": "rollup -c ./test-scene-graph/rollup.scene-graph.js && tap ./test-scene-graph/*.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cocos-creator/engine-3d.git"
  },
  "keywords": [
    "engine",
    "3d",
    "game"
  ],
  "author": "cocos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cocos-creator/engine-3d/issues"
  },
  "homepage": "https://github.com/cocos-creator/engine-3d/issues",
  "dependencies": {
    "gfx.js": "^1.2.14",
    "memop": "^1.6.0",
    "opentype.js": "^0.7.3",
    "vmath": "^1.4.8"
  },
  "devDependencies": {
    "@gamedev-js/rollup-plugin-node-resolve": "^3.0.0",
    "electron": "^1.8.1",
    "fs-jetpack": "^1.1.0",
    "lstats.js": "^1.2.7",
    "preview-server": "^1.1.2",
    "rollup": "^0.54.1",
    "rollup-plugin-buble": "^0.18.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "spectorjs": "^0.9.0",
    "uglify-js": "^3.3.7",
    "glsl-tokenizer": "^2.1.2",
    "uglify-es": "^3.1.3",
    "yargs": "^8.0.2"
  },
  "files": [
    "dist",
    "lib",
    "index.js"
  ]
}
