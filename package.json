{
  "name": "engine-3d.js",
  "version": "0.6.0",
  "description": "Simple 3D Game Engine",
  "main": "dist/engine-3d.js",
  "module": "index.js",
  "jsnext:main": "index.js",
  "scripts": {
    "prepare": "npm run build",
    "pretest": "npm run build:dev",
    "build": "npm run build:dev && npm run build:min",
    "build:shader": "shdc --chunks ./lib/shaders/chunks --templates ./lib/shaders/templates",
    "build:effect": "node ./script/build-effect.js",
    "build:dev": "npm run build:shader && npm run build:effect && rollup -c ./script/rollup.config.js",
    "build:min": "uglifyjs ./dist/engine-3d.dev.js --mangle --source-map url=engine.min.js.map -o ./dist/engine-3d.min.js",
    "dev": "rollup -w -c ./script/rollup.config.js",
    "start": "electron ./playground",
    "server": "preview -p 8002 -e playground",
    "test": "tap test/*.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cocos-creator/engine-3d.git"
  },
  "keywords": [
    "engine",
    "3d",
    "game"
  ],
  "author": "jwu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cocos-creator/engine-3d/issues"
  },
  "homepage": "https://github.com/cocos-creator/engine-3d/issues",
  "dependencies": {
    "ecs.js": "^1.2.2",
    "event-sys": "^1.1.0",
    "geom-utils": "^1.0.0",
    "gfx.js": "^1.2.12",
    "input.js": "^1.2.3",
    "memop": "^1.6.0",
    "primitives.js": "^1.1.0",
    "renderer.js": "^1.8.0",
    "scene-graph": "^1.3.6",
    "vmath": "^1.4.7"
  },
  "devDependencies": {
    "@gamedev-js/rollup-plugin-node-resolve": "^3.0.0",
    "electron": "^1.8.1",
    "fs-jetpack": "^1.1.0",
    "lstats.js": "^1.2.7",
    "preview-server": "^1.0.7",
    "rollup": "^0.43.0",
    "rollup-plugin-buble": "^0.18.0",
    "rollup-watch": "^4.3.1",
    "spectorjs": "^0.9.0",
    "uglify-es": "^3.1.3"
  },
  "files": [
    "dist",
    "lib",
    "index.js"
  ]
}
